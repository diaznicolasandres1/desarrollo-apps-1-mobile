{
  "expo": {
    "name": "Recetas",
    "slug": "recetas",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon_1024.png",
    "scheme": "recetas",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.gruposiete.recetas"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon_1024.png"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.gruposiete.recetas"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/icon_1024.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#FFF3E0"
        }
      ],
      "expo-web-browser",
      [
        "expo-image-picker",
        {
          "photosPermission": "La aplicación necesita acceso a tu galería para seleccionar fotos de tus recetas.",
          "cameraPermission": "La aplicación necesita acceso a tu cámara para tomar fotos de tus recetas."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
